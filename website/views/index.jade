extends layout

block css
	link(rel='stylesheet' href='css/index.css')
	link(rel="stylesheet" href="lib/angular-accordion/css/ang-accordion.css")
	link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")

block body
	include ./include/navbar.jade

	// add #bg-img to body for photo background
	body(ng-app='indexApp' ng-controller="IndexCtrl")
		#wrapper
			section#content(ng-cloak)
				.container#intro.text-center
					div
						h1.md-display-3 { Linked Paleo Data }
						br
						img(ng-src="img/logo_trans.png" width="250px")
						br
						br
						p.md-subhead Linked Paleo Data (LiPD) is a community data framework being designed to simplify the sharing, reuse and analysis of paleoclimate data. By combining a flexible, hierarchical data container with linked data concepts, LiPD lets paleoscientists spend less time wrangling data, and more time doing science.
						p.md-subhead Weâ€™re currently working hard to develop more and better utilities for interacting with LiPD, both for the creation and validation of LiPD datasets, and for tools to interact with LiPD data in Python, R, and Matlab.
						p.md-subhead.
							A technical description of the LiPD framework is available
							#[a(href='http://www.clim-past-discuss.net/11/4309/2015/cpd-11-4309-2015-discussion.html') here.]


			//#buttons(layout='row')
			//	//- .md-button.schematic-btn.left(ng-mouseenter="sch=true" ng-mouseleave="sch=false") Schematic
			//	a.right.smoothScroll(href="#schematic")
			//		i.fa.fa-angle-double-down.fa-5x
			
		//.container.cf#schematic
		//	.animation-element.bounce-up.cf
		//		h1.subject.md-display-3(layout layout-align="center center") { Schematic }
		//		.subject.third
		//			.content(layout='row' layout-align='space-around center' ng-cloak)
		//				img(ng-src="img/schematic.png" style='width:100%;')


		.container.cf#gettingstarted
			.animation-element.bounce-up.cf
				h1.subject.md-display-3(layout layout-align="center center") Getting Started

				h3 I want to ...
				md-card(ng-repeat="item in gettingStarted")
					md-card-title
						md-card-title-text
							span.md-headline {{item.title}}
					md-card-content
						ul
							li(ng-repeat="desc in item.descriptions") {{ desc }}


		.container.cf#faq
			.animation-element.bounce-up.cf
				h1.subject.md-display-3(layout layout-align="center center") FAQ
				ang-accordion
					collapsible-item(ng-repeat="item in faqs" item-title="{{item.question}}")
						div
							p {{item.answer}}


		.container.cf#quicklinks
			.animation-element.bounce-up.cf
				h1.subject.md-display-3(layout layout-align="center center") Quick Links

				md-button(ng-repeat="item in quickLinks" style="background-color: #f6f6f6; min-width: 204px; min-height:118px;" ng-href="{{item.link}}")
					br
					i.material-icons.md-dark.md-36 {{item.icon}}
					br
					span {{item.title}}
					md-tooltip {{item.tooltip}}

	.container.cf#about
			.animation-element.bounce-up.cf
				h1.subject.md-display-3(layout layout-align="center center") About Us
				.subject.first
					.category-color
					.icon
						i.fa.fa-users
					.header.cf
					h3.title Team
					.content(layout-sm='column' layout='row' layout-align='space-around center')
						.layout-margin(flex='25')
							md-card
								img.md-card-image(ng-src="img/heiser.jpg")
								md-card-content
									div(layout='row' layout-align='space-around center')
										a(href="https://instagram.com/chrisheiser")
											i.fa.fa-instagram
										a(href="http://chrismheiser.github.io")
											i.fa.fa-coffee
										a(href="https://github.com/chrismheiser")
											i.fa.fa-code
										a(href="https://www.linkedin.com/in/chrismheiser")
											i.fa.fa-linkedin
									h2.md-title Christopher Heiser
									p Application Systems Analyst
									p Northern Arizona University
						.layout-margin(flex='25')
							md-card
								img.md-card-image(ng-src="img/mckay.jpg")
								md-card-content
									div(layout='row' layout-align='space-around center')
										a(href="https://www.cefns.nau.edu/~npm4/")
											i.fa.fa-coffee
									h2.md-title Nicholas McKay
									p Principal Investigator
									p School of Earth Sciences and Environmental Sustainability
									p Northern Arizona University
						.layout-margin(flex='25')
							md-card
								img.md-card-image(ng-src="img/emile.jpg")
								md-card-content
									div(layout='row' layout-align='space-around center')
										a(href="https://twitter.com/el_nino_waves")
											i.fa.fa-twitter
										a(href="http://climdyn.usc.edu/People.html")
											i.fa.fa-coffee
										a(href="https://www.linkedin.com/in/elnino")
											i.fa.fa-linkedin
									h2.md-title Julien Emile-Geay
									p Principal Investigator
									p Department of Earth Science
									p University of Southern California
						.layout-margin(flex='25')
							md-card
								img.md-card-image(ng-src="img/khider.jpg")
								md-card-content
									div(layout='row' layout-align='space-around center')
									h2.md-title Deborah Khider
									p Department of Earth Science
									p University of Southern California

				.subject.second
					.category-color
					.icon
						i.fa.fa-globe
					.header.cf
					h3.title Location
					.content
						div(ng-controller='MapCtrl' ng-cloak)
							ui-gmap-google-map(center="map.center" zoom="map.zoom" options="options")

		footer
			p#nsf.
				The development of LiPD is funded by the National Science Foundation
				#[img(ng-src='img/nsf.jpg' style='width:50px')]


block js
	script(src="lib/angular-accordion/js/ang-accordion.js")
	script(src='https://cdnjs.cloudflare.com/ajax/libs/angular-google-maps/2.2.0/angular-google-maps.min.js')
	script(src='https://maps.googleapis.com/maps/api/js?sensor=false')
	script(src='apps/indexApp.js')
	script(src='js/ngMap.js')
	script(src="js/ngIndex.js")
	script(src="js/ngContact.js")
	script(src='lib/animate.js')
	script(src='lib/smooth.js')
